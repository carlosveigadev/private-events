

<div class="container d-flex align-items-center flex-column">
  <h2 class="text-white mt-5">Edit User</h2>
  <%= form_with(model: @user, local: true) do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group text-white" style="width: 25rem">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group text-white" style="width: 25rem">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control"%>
    </div>

    <button type="submit" class="btn btn-dark">Update</button>

    <%= link_to 'Delete User', user_path(@user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    <%= link_to 'Back', user_path, class: "text-white" %>


  <% end %>
</div>


