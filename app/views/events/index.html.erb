<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <%= event.initial_date %>
        <%= event.end_date %>
        <%= event.location %>
        <%= event.description %>
        <%= link_to 'Show', event_path(event.id) %><br>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>

<p>
  <strong>Upcoming Events:</strong>
  <br>
  <tbody>
    <% @events.future_events.each do |event| %>
          <%= event.initial_date %>
          <%= event.end_date %>
          <%= event.location %>
          <%= event.description %><br>
      </tr>
    <% end %>
  </tbody>
</p>

<p>
  <strong>Past Events:</strong>
  <br>
  <tbody>
    <% @events.past_events.each do |event| %>
          <%= event.initial_date %>
          <%= event.end_date %>
          <%= event.location %>
          <%= event.description %><br>
      </tr>
    <% end %>
  </tbody>
</p>



