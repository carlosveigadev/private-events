
<div class='justify-content-center d-flex m-5'>
  <div class=" m-2 card opacity-card text-dark p-4 " style="width: 30rem;">
    <div class="card-title">
      <h4 class="font-weight-bold">Event Details</h4>
    </div>
    <div class="card-title">
      <strong>Location:</strong>
      <%= @event.location %>
    </div>
    <div class="card-title">
      <strong>Description:</strong>
      <%= @event.description %>
    </div>
     <div class="card-title">
      <strong>Initial Date:</strong>
      <%= @event.initial_date %>
    </div>
    <div class="card-title">
      <strong>End Date:</strong>
      <%= @event.end_date %>
    </div>
    <div>
      <% if logged_in? %>
        <%= link_to "Attend", attend_path(event_id: @event.id), class: 'btn btn-success' %>
        <%= link_to 'Remove', event_path(@event), method: :delete, class: 'btn btn-danger' %>
        <%= link_to 'Edit', edit_event_path(@event), class: 'btn btn-dark'%>
      <% end %>
      <%= link_to 'Back', events_path, class: 'btn btn-dark' %>
    </div>
  </div>
</div>
<div class="d-flex flex-wrap justify-content-center mb-5">
    <div class="card  m-2 opacity-card" style="width: 18rem;">
      <h4 class="font-weight-bold  m-2">Attendees</h4>
      <div class="card-body">
      <% if any_attendees? %>
        <% @event.attendees.each do |attendee| %>
        <h5 class="card-title"><%= attendee.name %></h5>
        <% end %>
      <% else %>
        <h5 class="card-title">No one is coming, yet...</h5>
      <% end %>
      </div>
    </div>
</div>
